<div class="container-fluid">
<div class="row">

  {{#each model as |good|}}

  <div class="col-sm-6 col-md-2">
    <div class="thumbnail">
      <img src={{good.minPic}} alt="..."   class="img-thumbnail">
      <div class="caption">
        <h3>{{good.name}}<span class="badge">剩余 {{good.count}}</span></h3>
        <p>{{good.description}}</p>
        <p>{{#link-to "shops.shop.goods.good" 1 good.id class="btn btn-primary" role="button"}}查看详情{{/link-to}} <a href="#" class="btn btn-default" role="button">立即购买</a> <a href="#" class="btn btn-default" role="button">闪电购</a></p>
      </div>
    </div>
  </div>

  {{/each}}

</div>
</div>
